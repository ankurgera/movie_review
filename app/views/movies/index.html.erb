<% unless user_signed_in? %>
  <div class="jumbotron">
    <h1>Your Favorite Movies Reviewed</h1>
    <p><%= link_to "Sign Up To Write A Review", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
  </div>
<% end %>

<%= form_tag movies_path, method: "get", id: "filter", class: "filter" do %>
  <%= label_tag "Category" %>
  <%= select("movie", "category", categories, {selected: selected_category(params[:movie])}, onchange: "$('#filter').submit();") %>
<% end %>

<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to (image_tag movie.image.url(:medium)), movie %>
      </div>
    </div>
  <% end %>
</div>
<div id="movie-pagination"><%== pagy_bootstrap_nav(@pagy) %></div>
